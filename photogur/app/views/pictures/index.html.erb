<h2>Most Recent Pictures</h2>
<%= link_to "New Picture", "/pictures/new" %>


<ul>
	<% @most_recent_pictures.each do |picture| %>
		<li><%= link_to "#{picture.title}", "pictures/#{picture.id}" %></li>

	<% end %>
</ul>

<ul>
	<% @created_before.each do |picture| %>
	<li><%= link_to "#{picture.title}", "pictures/#{picture.id}" %></li>
	<% end %>
</ul>
<p>Total Number Older than 1 mth: <%= @created_before.count %></p>